<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        Label:
            text: "Login"
            font_size: 24
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
            password: True
        Button:
            text: "Login"
            on_press: app.root.current = 'main_menu'